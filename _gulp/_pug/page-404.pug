doctype

html(lang="ru")

  -var active = 'Страница не найдена' //активный пункт меню, список в header.jade
  -var pageTitle = 'Страница не найдена' + ' - Эксклюзивный магазин MAISON' //title страницы для генерации верстки
  -var lk = false

  include ./_include/_head

  body
    .base
      // Preloader
      include ./_include/_preloader

      include ./_include/_header

      // Top img
      .top-img.--thin
        img(src="./tmp/top-img-1.png", alt="").top-img__bg
        .top-img__wrapper
          .container

            h1 Ошибка 404
            +breadcrumbs()
              +breadcrumbs-item('Эксклюзивный магазин MAISON', './index.html')
              +breadcrumbs_dropdown
              +breadcrumbs-item('Название страницы')

      // Content
      .content
        .container

          .page404
            .div
              .h2 Страница не найдена
              p Так уж получилось, что из множества страниц нашего сайта Вы оказались как раз на той, которая уже не существует… 
                br
                | Пожалуйста, воспользуйтесь навигацией или формой поиска, чтобы найти интересующую Вас информацию
              a(href="#!").btn НА ГЛАВНУЮ

      // /end Content

      include ./_include/_footer
      //- div(style="height: 1000px; background-color: #000")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js?v22")

