doctype

html(lang="ru")

  -var active = 'Доставка и оплата' //активный пункт меню, список в header.jade
  -var pageTitle = 'Доставка и оплата' + ' - Эксклюзивный магазин MAISON' //title страницы для генерации верстки
  -var lk = false

  include ./_include/_head

  body
    .base
      // Preloader
      include ./_include/_preloader

      include ./_include/_header

      // Top img
      .top-img
        img(src="./tmp/top-img-1.png", alt="").top-img__bg
        .top-img__wrapper
          .container

            h1 Доставка и оплата
            +breadcrumbs()
              +breadcrumbs-item('Эксклюзивный магазин MAISON', './index.html')
              +breadcrumbs-item('Название раздела', '#!')
              +breadcrumbs-item('Название страницы')

      // Content
      .content
        .container

          .content__document.--pb0
            .row.justify-content-center
              .col-12.col-lg-10
                p
                  b Доставка по РФ и ближнему зарубежью:
                ul
                  li Доставка в пределах МКАД – 2500 руб.
                  li Доставка по Московской области (от МКАД до 20 км) – 3500 руб.
                  li Доставка по Московской области (более 20 км от МКАД) рассчитывается индивидуально.
                  li Подъем на этаж на лифте 500 руб.
                  li Подъем без лифта - 250 руб./чел/этаж/предмет.

                p
                  b Оплатить выбранный товар вы можете:

                ol
                  li Наличными при получении товара
                  li Банковским переводом
                  li Наличным или безналичным платежом в магазине


      // /end Content

      include ./_include/_footer
      //- div(style="height: 1000px; background-color: #000")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js?v14")

