                a(href="#!").main-choice__link
                  span.span
                  img(src="./tmp/main-choice-logo-4.png", width="152", height="152", alt="")
                a(href="#!").main-choice__link
                  span.span
                  img(src="./tmp/main-choice-logo-5.png", width="152", height="152", alt="")
                a(href="#!").main-choice__link
                  span.span
                  img(src="./tmp/main-choice-logo-6.png", width="152", height="152", alt="")
        // /end Main choice

      // /end Content

      include ./_include/_footer
      div(style="height: 1000px; background-color: #000")

