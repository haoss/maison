doctype

html(lang="ru")

  -var active = 'Главная' //активный пункт меню, список в header.jade
  -var pageTitle = 'Главная' + ' - Эксклюзивный магазин MAISON' //title страницы для генерации верстки

  include ./_include/_head

  body
    .base
      // Preloader
      include ./_include/_preloader

      include ./_include/_header

      // Main blocks
      .main-blocks
        .main-blocks__carousel
          img(src="./tmp/main-big-img.png", alt="").img-fluid
          img(src="./tmp/main-big-img-2.png", alt="").img-fluid
          img(src="./tmp/main-big-img.png", alt="").img-fluid
          img(src="./tmp/main-big-img-2.png", alt="").img-fluid
          img(src="./tmp/main-big-img.png", alt="").img-fluid
          img(src="./tmp/main-big-img-2.png", alt="").img-fluid
        .main-blocks__bottom
          h1 Изысканные решения
            small под самый требовательный вкус
        .main-blocks__list
          a(href="#!").main-blocks__list-img
            img(src="./tmp/main-blocks-img-1.png", alt="")
            span.span
              span Шелковая коллекция Beauty Sleep 
              b Бьюти тренд 2020
          a(href="#!").main-blocks__list-img
            img(src="./tmp/main-blocks-img-2.png", alt="")
            span.span
              span Salt&Pepper tableweare goes RAWW!
              b by Australian
          a(href="#!").main-blocks__list-img
            img(src="./tmp/main-blocks-img-3.png", alt="")
            span.span
              span Подвесной светильник Calle Terzani
              b Bella in Italiano

      // Content
      .content
        .container
          .content__document
            p
              strong Приглашаем к сотрудничеству региональных корпоративных клиентов!
            p Мы с радостью сообщаем Вам, что ведем активное расширение географии продаж!
            p В связи с этим, приглашаем к сотрудничеству региональных дилеров, заинтересованных в развитии продаж в области интерьерного декора и готовых работать в формате дистрибьюции.
            p
              strong Своим партнерам в регионах мы готовы предложить:
            ul
              li самый полный ассортимент мебели м аксессуаров от ведущих брендов США и Европы;
              li лучшие цены на продукцию;
              li кратчайшие сроки поставки заказов;
              li всестороннюю маркетинговую поддержку;
              li отлаженные логистические схемы и четкое соблюдение сроков поставок;
              li прогрессивную систему скидок и бонусов;
              li оперативность в предоставлении всей необходимой информации по продукции;
              li защиту и сопровождение проектов.
            p
              strong Мы можем разместить индивидуальный заказ на фабриках, с которыми сотрудничаем, а также изготовить предметы мебели специально под ваши проекты!

      // /end Content

      include ./_include/_footer
      div(style="height: 1000px; background-color: #000")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js")

    script().
      $(document).ready(function(){
        $('.header').addClass('--main');
      })

